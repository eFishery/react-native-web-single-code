# editorconfig.org
root = true

# For every file in root directory
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown in root directory
[*.md]
trim_trailing_whitespace = false

# JS files in the whole project
[**.{ejs,js,json}]
indent_style = space
indent_size = 2
